#8.1
for num in range(2, 13):
    for i in range(2, num):
        if num % i == 0:
            print(num, "is Composite")
            break
    else:
        print(num, "is Prime")
#9.1
for num in range(100, 1000):
    sum = 0
    temp = num
    while temp > 0:
        digit = temp % 10
        sum += digit ** 3
        temp //= 10
    if num == sum:
        print(num)

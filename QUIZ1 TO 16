#12.1
lst = [5,6,3,9,2,12,3,8,7]
max_index = 0

for i in range(len(lst)):
    if lst[i] > lst[max_index]:
        max_index = i

lst[max_index], lst[-1] = lst[-1], lst[max_index]

print(lst)
#13.1
a = [[1, 2], [3, 4], [5, 6]]
new_list = []

for row in a:
    for item in row:
        new_list.append(item)

print(new_list)

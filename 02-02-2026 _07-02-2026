#Given a number x and an array of integers arr, find the smallest subarray with sum
#greater than the given value. If such a subarray do not exist return 0 in that case.

def smallest_subarray_length(x, arr):
    left = current_sum = 0
    n = len(arr)  
    min_len = n + 1  
    for end in range(n):
        current_sum += arr[end]

        while current_sum > x:
            min_len = min(n + 1, end - left + 1)
            current_sum -= arr[left]
            left += 1
    return 0 if min_len == n + 1 else min_len
x = 11
arr =[1,10,5]
print(smallest_subarray_length(x, arr))
